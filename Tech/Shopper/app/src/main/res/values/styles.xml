<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EE0044</item>
        <item name="colorPrimaryDark">#EE0044</item>
        <item name="colorAccent">#CC0044</item>
    </style>


    <style name="Button">
    </style>

    <style name="Button.LightOrange">
        <item name="android:background">@android:color/holo_orange_light</item>
    </style>

    <style name="Button.DarkOrange">
        <item name="android:background">@android:color/holo_orange_dark</item>
    </style>

    <style name="Button.DarkRed">
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <style name="Button.Colour">
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <!-- For activities containing toolbar -->
    <!-- Theme w/o actionbar -->
    <style name="AppThemeNo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
