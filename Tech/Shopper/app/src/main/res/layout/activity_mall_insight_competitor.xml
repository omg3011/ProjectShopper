<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MallInsightActivity_Competitor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Sales (Past Month)"
                android:textStyle="bold"
                android:textColor="@color/colorMainColour"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:layout_marginBottom="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Title -->
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="No. Of Competitors:"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="06"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Title -->
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="No. Of Tenants:"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"/>
            </LinearLayout>


        </LinearLayout>



        <com.github.mikephil.charting.charts.PieChart
            android:layout_marginTop="40dp"
            android:id="@+id/mall_insight_competitor_PC"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>


    </LinearLayout>

</LinearLayout>