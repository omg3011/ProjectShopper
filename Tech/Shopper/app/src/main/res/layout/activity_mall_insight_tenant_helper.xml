<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_marginHorizontal="3dp"
    app:contentPadding="5dp"
    android:background="@color/colorBackgroundColour"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/mall_insight_tenant_helper_storeName_TV"
                android:layout_gravity=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zStore"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>


            <TextView
                android:id="@+id/mall_insight_tenant_helper_storeTag_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kids"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"/>


            <TextView
                android:id="@+id/mall_insight_tenant_helper_storeUnit_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#01-20"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>



        </LinearLayout>

        <!--
        <Button
            android:id="@+id/mall_insight_tenant_helper_chat_btn"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/hollow_circle"
            android:foreground="@drawable/ic_message_black"
            android:foregroundTint="@color/colorMainColour"/>
            -->
    </RelativeLayout>

</androidx.cardview.widget.CardView>