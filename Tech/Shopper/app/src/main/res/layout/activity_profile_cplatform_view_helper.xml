<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_marginHorizontal="3dp"
    app:contentPadding="5dp"
    android:background="@color/colorBackgroundColour"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_cplatform_view_helper_storeName_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StoreName"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/profile_cplatform_view_helper_storeTag_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FnB"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/profile_cplatform_view_helper_storeUnit_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#01-01"
                android:fontFamily="@font/montserrat"
                android:textSize="15dp"/>


            <RatingBar
                android:layout_marginTop="3dp"
                android:id="@+id/profile_cplatform_view_helper_rating_RB"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:isIndicator="true"
                android:transformPivotX="0dp"
                android:max="5"
                android:rating="4"
                android:scaleY="1.2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="5dp">



            <Button
                android:id="@+id/profile_cplatform_view_helper_accept_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/hollow_circle"
                android:foreground="@drawable/ic_edit_black"
                android:foregroundTint="@color/colorGreen"/>

            <Button
                android:id="@+id/profile_cplatform_view_helper_reject_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/hollow_circle"
                android:foreground="@drawable/ic_cross_black"
                android:foregroundTint="@color/colorMainColour"/>

            <Button
                android:visibility="gone"
                android:id="@+id/profile_cplatform_view_helper_chat_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/hollow_circle"
                android:foreground="@drawable/ic_message_black"
                android:foregroundTint="@color/colorAccent"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>