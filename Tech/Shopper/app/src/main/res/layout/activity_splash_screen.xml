<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/colorBackgroundColour">

    <!-- Text: Let's Collab-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:id="@+id/ss_icon_IV"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/finallogo" />

        <TextView
            android:visibility="gone"
            android:id="@+id/ss_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonada_semibold"
            android:text="Let's Collab"
            android:textColor="@color/colorMainColour"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>