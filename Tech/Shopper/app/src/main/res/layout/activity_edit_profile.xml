<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfileActivity"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/edit_setup_profile_image_cv"
            android:layout_marginVertical="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_add_image_black"
            android:elevation="10dp"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_setup_profile_storeName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Store Name"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_setup_profile_storeUnit_et"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Store Unit"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--    <TextView
                android:id="@+id/setup_profile_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Store Tag:"
                android:textColor="#63000000"
                android:textSize="20sp"/>
    -->
        <!--
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/setup_profile_tags"
            -->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_setup_profile_storetags_TV"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Store Tag"
            android:textSize="20dp" />

        <Button
            android:id="@+id/edit_setup_profile_tag_button"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/montserrat_bold"
            android:text="Select Tag"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/edit_setup_profile_submitBtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Submit"
        android:textSize="16sp"
        android:textColor="@color/colorWhite" />
</LinearLayout>